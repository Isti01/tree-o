.GameUIStyles {
    flex-grow: 1;
}

.BottomPanelStyle {
    height: 175px;
    background-color: rgb(238, 238, 238);
    padding-left: 12px;
    padding-right: 12px;
    padding-top: 12px;
    padding-bottom: 12px;
    flex-direction: row;
    align-items: auto;
    justify-content: space-around;
}

.TopPanelStyle {
    width: 175px;
    background-color: rgb(238, 238, 238);
}

.ContainerStyle {
    flex-grow: 1;
    flex-direction: row;
}

.ColumnContainer {
    flex-grow: 1;
}

.GameViewStyle {
    height: 214px;
    flex-grow: 1;
}

.NextButtonStyle {
    bottom: 0;
    right: 0;
    left: 0;
    position: absolute;
    height: 175px;
}

.TitleStyle {
    font-size: 20px;
    padding-top: 12px;
    -unity-font-style: bold;
}

.SubtitleStyle {
    font-size: 18px;
}

.button {
    padding-top: 6px;
    padding-bottom: 6px;
    color: rgb(0, 0, 0);
    background-color: rgba(255, 255, 255, 0.75);
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
}

.selected-button {
    padding-left: 0;
    padding-right: 0;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    margin-left: 3px;
    margin-right: 3px;
    margin-top: 1px;
    margin-bottom: 1px;
}
